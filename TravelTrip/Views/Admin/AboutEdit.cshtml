@using TravelTrip.Entity.Concrete
@model About
@{
    ViewBag.Title = "AboutEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hakkımızda Düzenle Sayfası</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Admin</a></li>
                        <li class="breadcrumb-item active">Hakkımızda Düzenleme</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Hakkımızda Düzenle Sayfası</h3>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("AboutEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.LabelFor(x => x.Id)
                                @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = "readonly" })
                                <br />
                                @Html.LabelFor(x => x.Description)
                                @Html.TextAreaFor(m => m.Description,3,1, new { @class = "form-control" })
                                <br />
                                @Html.LabelFor(x => x.ImageUrl)<br />
                                <img src="@Model.ImageUrl" width="200" height="150" />
                                @Html.TextBox("file", "", new { type = "file", @class = "form-control" })
                                <br />
                                <div class="pull-right">
                                    <button class="btn btn-success btn-sm" style="margin-top:20px" type="submit">İçerik Kaydet</button>
                                    <a href="@Url.Action("About", "Admin")" style="margin-top:20px" title="Geri Dön" class="btn btn-default  btn-sm"><span class="fa fa-arrow-alt-circle-left"></span></a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>