@using TravelTrip.Entity.Concrete
@model IEnumerable<Blog>


    <div class="padding">
        <h4>En Popüler 10 Blog</h4>
        <ul class="list list-pad">
            @{ int i = 0; }
            @foreach (var x in Model)
            {
                <li class="list-bg"><span>@{i++;} @i.</span><a href="@Url.Action("BlogDetail","Blog", new { x.Id })">@x.Title</a></li>
            }

        </ul>
        <a href="@Url.Action("Index","Blog")" class="link1">Tüm Bloglar</a>
    </div>
