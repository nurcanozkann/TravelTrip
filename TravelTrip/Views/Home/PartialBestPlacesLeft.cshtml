@using TravelTrip.Entity.Concrete
@model IEnumerable<Blog>

<div class="padding1">
    <h4>En Beğendiğim Yerler</h4>
    <div class="box-left">
        @foreach (var b in Model)
        {
            <div class="bot-img">
                <a href="@Url.Action("BlogDetail","Blog", new { b.Id })"><img src="@b.BlogImage" style="width:120px;height:80px;" alt="" /> </a>
            </div>
            <div class="bot-desc">
                <p>@b.Description.Substring(0, 80)...</p>
            </div>
            <div class="clear"></div>
        }
    </div>

    @Html.Action("PartialBestPlacesRight", "Home")
</div>