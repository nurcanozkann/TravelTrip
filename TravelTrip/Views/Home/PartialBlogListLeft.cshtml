@using TravelTrip.Entity.Concrete
@model IEnumerable<Blog>


    @foreach (var item in Model)
    {
        <div class="left">

            <div class="bot-left">
                <img src="@item.BlogImage" style="width:300px;height:180px" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Title</h4>
                <span class="doller">@item.Date.ToShortDateString()</span>
                <p>@item.Description.Substring(0, 100)</p>
                <p><a href="@Url.Action("BlogDetail","Blog", new { item.Id })"><span class="read">Daha fazlası için >></span></a></p>
            </div>
        </div>
    }